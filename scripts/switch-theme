#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

if [ "$1" == "dark" ]; then
  sed -i.bak 's/colors: \*light/colors: \*dark/g' ~/.dotfiles/alacritty/.config/alacritty/alacritty.yml
  rm ~/.dotfiles/alacritty/.config/alacritty/alacritty.yml.bak
else
  git -C ~/.dotfiles checkout --quiet alacritty/.config/alacritty/alacritty.yml
fi
