# ~/.mailcap

text/*; less '%s'; edit=nvim '%s'; needsterminal; test=test -t 0
text/html; lynx -dump -force_html %s; copiousoutput; needsterminal;
text/calendar; mv %s %s.ics && open %s.ics && rm %s.ics
application/ics; mv %s %s.ics && open %s.ics && rm %s.ics
application/pdf; open '%s';
*/*; open '%s'; test=expr "$DISPLAY" : :
