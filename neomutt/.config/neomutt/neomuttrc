# mail type
set mbox_type = Maildir
set sendmail = "/usr/local/bin/msmtp"

# account options
set my_user = iam@chrisdeluca.me
set from = $my_user
set realname = "Chris DeLuca"
alternates code@chrisdeluca.me|contact@chrisdeluca.me|signups@chrisdeluca.me|bronzehedwick@gmail.com|christopher.j.deluca@gmail.com
set mail_check = 0
set envelope_from
unset move
set delete
unset confirmappend
set quit
set header_cache = ~/.cache/neomutt
set send_charset = "us-ascii:utf-8"
set fast_reply = yes
set include = yes
set mark_old = no

# folders
set folder = "~/Mail"
set spoolfile = "+INBOX"
set mbox = "+Archive"
set postponed = "+Drafts"
set record = "+Sent"

# mailboxes
mailboxes +INBOX \
          +Archive \
          +Sent \
          +Drafts \
          +Spam \
          +Trash

# trash handling
set trash = '+Trash'
folder-hook =Trash 'push <delete-pattern>~d>30d<enter>'

macro index,pager \cb "<enter-command> set my_pdsave=\$pipe_decode<enter>\
<enter-command> unset pipe_decode<enter>\
<pipe-message>extract_url<enter>\
<enter-command> set pipe_decode=\$my_pdsave<enter>" "get URLs"

# general key bindings
macro index,pager S \
        "<save-message>+Spam<enter>" \
        "mark message as spam"
macro index,pager A \
        "<save-message>+Archive<enter>" \
        "archive message"
macro index,pager G \
        "<tag-thread><tag-prefix><save-message>+Archive<enter>" \
        "archive thread"
macro index,pager * \
        "<shell-escape>$HOME/.dotfiles/scripts/mailsync.sh<enter>" \
        "sync all mail"
macro attach s \
        "<save-entry><bol>~/Downloads/<eol>" \
        "save to downloads folder"

macro index / "<shell-escape>mu find --clearlinks --format=links --linksdir=~/Mail/search " \
        "mu find"
macro index <Esc>/ "<change-folder-readonly>~/Mail/search<enter>" \
        "mu switch to results"

# contacts
set query_command = "mu cfind --format=mutt-ab '%s'"
bind editor <Tab> complete-query
bind editor ^T    complete

# sort/threading
set sort = threads
set sort_aux = reverse-last-date-received
set sort_re

# look and feel
set pager_index_lines = 8
set pager_context = 5
set pager_stop
set menu_scroll
set smart_wrap
set tilde
unset markers
set text_flowed = yes

set index_format = "%4C %Z %{%b %d} %-15.15L %?K?%9.10K&          ? %?X?ðŸ“Ž&  ? (%?l?%4l&%4c?) %s %> %?g?%g?"

# don't make me press enter after shell command is run
set wait_key = no

# speed up folder switching
set sleep_time = 0

# html mails
auto_view text/html
alternative_order text/plain text/encriched text/html

# calendar events
auto_view text/calendar application/ics

# sidebar
# set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats
set sidebar_width = 20
set sidebar_divider_char = 'â”‚'
# sidebar bindings
bind index,pager B sidebar-toggle-visible
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index <left> sidebar-prev          # got to previous folder in sidebar
bind index <right> sidebar-next         # got to next folder in sidebar
bind index <space> sidebar-open         # open selected folder from sidebar

# composing
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set include
set forward_quote
set signature = ~/.config/neomutt/signature

# mail headers
ignore * # first, ignore all headers
unignore from: to: cc: bcc: reply-to: date: subject: x-label: # then, show only these
hdr_order from: to: cc: bcc: reply-to: date: subject: x-label: # and in this order

# pgp
source ~/.config/neomutt/gpg.rc
set pgp_use_gpg_agent = yes
set pgp_timeout = 3600
set crypt_autosign = no
set crypt_replyencrypt = yes

# colors
source ~/.config/neomutt/colors

