[general]
status_path = "~/.config/vdirsyncer/status/"

[pair my_contacts]
a = "my_contacts_local"
b = "my_contacts_remote"
collections = ["from a", "from b"]

[storage my_contacts_local]
type = "filesystem"
path = "~/.contacts/"
fileext = ".vcf"

[storage my_contacts_remote]
type = "carddav"
url = "https://carddav.fastmail.com/"
username = "iam@chrisdeluca.me"
password.fetch = ["command", "security", "find-generic-password", "-w", "-s", "vdirsyncer_carddav"]

[pair my_calendars]
a = "my_calendars_local"
b = "my_calendars_remote"
collections = ["from a", "from b"]
metadata = ["color"]

[storage my_calendars_local]
type = "filesystem"
path = "~/.calendars/"
fileext = ".ics"

[storage my_calendars_remote]
type = "caldav"
url = "https://caldav.fastmail.com/"
username = "iam@chrisdeluca.me"
password.fetch = ["command", "security", "find-generic-password", "-w", "-s", "vdirsyncer_caldav"]

